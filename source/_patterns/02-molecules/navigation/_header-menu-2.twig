<div class="header-menu">
    <div class="header-menu--wrapper header-menu--background-color header-menu--click-submenu">
        <ul>
            {% for link in header.header_menu %}
                {%  set itemClassActive = '' %}
                {%  set itemClassLast = '' %}
                {%  if(link.active) %}
                    {%  set itemClassActive = 'active' %}
                {% endif %}
                {% if loop.last %}
                    {%  set itemClassLast = 'last' %}
                {% endif %}
                {% if link.submenu and link.submenu != false %}
                    <li class="submenu__dropdown {{ itemClassActive }} {{ itemClassLast }}"><a href="#">{{ link.title }}<span class="fa fa-caret-down"></span><span class="fa fa-caret-right"></span></a>
                        <div class="submenu__content">
                            {% include "molecules-submenu" with link %}
                        </div>
                    </li>
                {% else %}
                    <li class="{{ itemClassActive }} {{ itemClassLast }}">{{ html.a(link) }}</li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
</div>
